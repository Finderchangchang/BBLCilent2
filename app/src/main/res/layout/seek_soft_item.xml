<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/common_list_item_background" >

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/icon_touxiang" />

    <TextView
        android:id="@+id/nicknameid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imglogo"
        android:singleLine="true"
        android:text="背背恋"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sizeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nicknameid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imglogo"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="12M"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/contentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sizeid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imglogo"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="简介......"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_anzhuangid"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_anzhuang"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:text="安装" />

</RelativeLayout>